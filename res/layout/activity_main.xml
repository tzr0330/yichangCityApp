<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <widget.MyScrollLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrolllayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/beijing1" >
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="63dp"
                android:text="宜昌欢迎您！"
                android:textColor="#c56fff"
                android:textSize="35sp" />
            <TextView
                android:id="@+id/bg1_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="133dp"
                android:text="水电之都"
                android:textColor="#c56fff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="89dp"
                android:text="宜居之城，昌盛之地"
                android:textColor="#a23fff"
                android:textSize="18sp" />
        </RelativeLayout>
         <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/beijing2" >

            <TextView
                android:id="@+id/bg2_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="133dp"
                android:text="昭君故里"
                android:textColor="#c56fff"
                android:textSize="20sp" />
            </RelativeLayout>
              <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/beijing3" >

            <TextView
                android:id="@+id/bg3_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="133dp"
                android:text="清江画廊"
                android:textColor="#c56fff"
                android:textSize="20sp" />
            </RelativeLayout>
              <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/beijing4" >

            <TextView
                android:id="@+id/bg4_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="133dp"
                android:text="旅游名城"
                android:textColor="#c56fff"
                android:textSize="20sp" />
            </RelativeLayout>
              <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/beijing5" >

            <TextView
                android:id="@+id/bg5_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="133dp"
                android:text="长江三峡"
                android:textColor="#c56fff"
                android:textSize="20sp" />
            <Button 
               android:id="@+id/start_app"
               android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
             
                android:layout_marginBottom="78dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="启动软件"/>
            </RelativeLayout>
    </widget.MyScrollLayout>
    <LinearLayout 
        android:id="@+id/line_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal"
        >
        <ImageView android:id="@+id/flag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            
            android:padding="5dp"
            android:src="@drawable/select_start"/>
        <ImageView android:id="@+id/flag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:src="@drawable/select_start"/>
        <ImageView android:id="@+id/flag3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:src="@drawable/select_start"/>
        <ImageView android:id="@+id/flag4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:src="@drawable/select_start"/>
        <ImageView android:id="@+id/flag5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:src="@drawable/select_start"/>
        
    </LinearLayout>

</RelativeLayout>