<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/image_sight"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:src="@drawable/baibao" />
    <LinearLayout 
        android:id="@+id/msg_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView 
            android:id="@+id/title_sight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="三峡大坝"/>
        <TextView 
            android:id="@+id/introduce_sight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="奇峰竟秀，翠林藏莺，幽静美妙。"/>
        <TextView 
            android:id="@+id/address_sight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="地址： 湖北省宜昌市夷陵区"/>
        <TextView 
            android:id="@+id/time_sight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="开放时间： 全天"/>
    </LinearLayout>

</LinearLayout>