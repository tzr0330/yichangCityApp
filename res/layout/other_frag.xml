<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
  <RelativeLayout 
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true">
    <LinearLayout 
        android:id="@+id/wea_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical"
       >
        <ImageView android:id="@+id/weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tianqi"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="宜昌天气" />
        
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/food_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_alignTop="@+id/wea_lay"
        android:layout_toRightOf="@+id/wea_lay"
         android:clickable="true"
        android:orientation="vertical">
        <ImageView 
            android:id="@+id/food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/food"
            android:layout_gravity="center"/>
          <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="宜昌美食" />
        
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/picture_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="true"
        android:layout_below="@+id/wea_lay">
        <ImageView 
            android:id="@+id/picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/zhaopian"
            android:layout_gravity="center"/>
          <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="宜昌美景" />
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/video_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_alignTop="@+id/picture_lay"
        android:layout_toRightOf="@+id/picture_lay"
         android:clickable="true"
        android:orientation="vertical">
        <ImageView 
            android:id="@+id/video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shiping"
            android:layout_gravity="center"/>
          <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="宜昌风采" />
        
    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
